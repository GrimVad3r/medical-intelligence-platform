# Environment: development | staging | production
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:12345678@localhost:5432/medical_intel
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# Telegram (from https://my.telegram.org)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_CHANNELS=
TELEGRAM_PROXY_ADDR=
TELEGRAM_PROXY_PORT=
TELEGRAM_PROXY_SECRET=

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RATE_LIMIT=100/minute
# API_KEYS=key-1,key-2
# Production: restrict origins (comma-separated)
# CORS_ORIGINS=https://app.example.com,https://dashboard.example.com

# NLP
NLP_MODEL_PATH=data/nlp_models
NLP_DEVICE=cpu
NLP_BATCH_SIZE=32

# YOLO
YOLO_MODEL_PATH=data/yolo_models
YOLO_CONFIDENCE=0.5
YOLO_DEVICE=cpu

# Logging: LOG_LEVEL=INFO|DEBUG|WARNING, LOG_FORMAT=text|json, LOG_PATH=logs/app.log
LOG_LEVEL=INFO
# LOG_FORMAT=json
# LOG_PATH=logs/app.log

# Optional: error tracking
# SENTRY_DSN=https://...@sentry.io/...
